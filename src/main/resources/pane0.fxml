<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="480.0" minWidth="720.0" style="-fx-background-color: #36393f;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="initialController">
   <bottom>
      <HBox style="-fx-background-color: #202225;" BorderPane.alignment="CENTER">
         <children>
            <Region style="-fx-background-color: #202225;" HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-family: Calibri;" text="Pane 0" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="4.0" top="4.0" />
         </padding>
      </HBox>
   </bottom>
   <top>
      <HBox spacing="10.0" style="-fx-background-color: #202225;" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-family: Calibri;" text="Property Viewer" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <ImageView>
                     <image>
                        <Image url="@welcomeImage.png" />
                     </image>
                  </ImageView>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label style="-fx-font-family: Calibri;" text="To make a booking:" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="login" mnemonicParsing="false" onAction="#loginClicked" prefWidth="150.0" style="-fx-font-family: Calibri;" text="Sign In">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></Button>
                  <Region HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Region>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label style="-fx-font-family: Calibri;" text="If you do not have an account:" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="register" mnemonicParsing="false" onAction="#registerClicked" prefWidth="150.0" style="-fx-font-family: Calibri;" text="Register">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></Button>
                  <Region HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Region>
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label style="-fx-font-family: Calibri;" text="Or:" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></Label>
                  <Region HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Region>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="guest" mnemonicParsing="false" onAction="#guestClicked" prefWidth="150.0" style="-fx-font-family: Calibri;" text="Continue as Guest">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="50.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>
